{% extends 'base.html.twig' %}


{% block title %}
Change password
{% endblock %}



{% block body %}
<h1>Change password</h1>
    {{ form_start(form, {method: 'PUT', action: url('change_password', {'id': user.id}) }) }}
    {{ form_widget(form) }}

    <div class="form-group row float-sm-right">
        <input type="submit" value="save" class="btn btn-primary" >
    </div>

    <div class="form-group row float-sm-left">
    <a href="{{ url('user_index') }}" title="{{ 'action_back_to_list'|trans }}">
    {{ 'action_back_to_list'|trans }}
    </a>

    {{ form_end(form) }}



{% endblock %}