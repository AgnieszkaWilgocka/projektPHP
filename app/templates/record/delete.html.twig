{% extends 'base.html.twig' %}

{% block title %}
{{'action_delete'|trans}}
{% endblock %}

{% block body %}
<h1>{{'action_delete'|trans}}</h1>

    {{ form_start(form, {method: 'DELETE', action: url('record_delete', {'id': record.id}) }) }}
    {{ form_widget(form) }}

    <div class="form-group row float-sm-right">
        <input type="submit" value="delete" class="btn btn-primary" >
    </div>

    <div class="form-group row float-sm-left">
        <a href="{{ url('record_index') }}" title="{{ 'action_back_to_list'|trans }}">
            {{ 'action_back_to_list'|trans }}
        </a>

{{ form_end(form) }}
{% endblock %}