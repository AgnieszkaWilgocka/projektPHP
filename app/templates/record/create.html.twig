{% extends 'base.html.twig' %}



{% block title %}
create record
{% endblock %}

{% block body %}
<h1>Create record</h1>

    {{ form_start(form, {method: 'POST', action: url('record_create')}) }}
    {{ form_widget(form) }}

    <div class="form-group row float-sm-right">
        <input type="submit" value="save" class="btn btn-primary" >
    </div>

    <div class="form-group row float-sm-left">
        <a href="{{ url('record_index') }}" title="{{ 'action_back_to_list'|trans }}">
            {{ 'action_back_to_list'|trans }}
        </a>

{{ form_end(form) }}


{% endblock %}