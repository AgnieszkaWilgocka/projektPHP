{% extends 'base.html.twig' %}

{% block title %}
    {{ 'tag_view'|trans }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card border-0 shadow my-5">
            <div class="card-body p-5">

                <h1>{{'tag_view'|trans ({'%id%': tag.title|default('')}) }}</h1>
                {% if tag is defined and tag|length %}
                    <dl>
                        <dt>{{'label_records'|trans}}</dt>
                        {% for records in tag.records %}
                            <a class="btn btn-link" href="{{ url('record_show', { 'id': records.id }) }}" title="{{ records.title }}">
                                {{ records.title }}
                            </a>
                        {% endfor %}
                        <dd>
                            <a class="btn btn-outline-primary" href="{{ url('record_index') }}" title="{{ 'action_back_to_list'|trans }}">
                                {{ 'action_back_to_list'|trans }}
                            </a>
                        </dd>
                    </dl>
                {% else %}
                    {{ 'message_empty_list'|trans }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}